  </div>
</section>

<style>
  .ritual {
    padding: var(--space-xl) 0;
    background: var(--color-bg-alt);
  }
  
  .ritual__header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto var(--space-xl);
  }
  
  .ritual__label {
    display: inline-block;
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-primary);
    margin-bottom: var(--space-sm);
    padding: 0.5rem 1rem;
    background: rgba(25, 230, 60, 0.1);
    border-radius: var(--radius-full);
  }
  
  .ritual__title {
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: var(--space-sm);
    line-height: 1.2;
  }
  
  .ritual__description {
    font-size: 1.1rem;
    color: var(--color-text-light);
  }
  
  .ritual__steps {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-md);
    margin-bottom: var(--space-xl);
  }
  
  .ritual__step {
    position: relative;
    text-align: center;
    padding: var(--space-md);
    background: var(--color-white);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
    box-shadow: var(--shadow-sm);
  }
  
  .ritual__step:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
  }
  
  .ritual__step-number {
    position: absolute;
    top: var(--space-sm);
    left: var(--space-sm);
    font-family: var(--font-display);
    font-size: 2rem;
    font-weight: 700;
    color: rgba(0, 0, 0, 0.05);
    line-height: 1;
  }
  
  .ritual__step-icon {
    width: 64px;
    height: 64px;
n    margin: 0 auto var(--space-sm);
    color: var(--color-primary);
  }
  
  .ritual__step-icon svg {
    width: 100%;\n    height: 100%;\n  }
  \n  .ritual__step-title {\n    font-family: var(--font-display);\n    font-size: 1.1rem;\n    font-weight: 600;\n    margin-bottom: var(--space-xs);\n    color: var(--color-text);\n  }\n  \n  .ritual__step-description {\n    font-size: 0.85rem;\n    color: var(--color-text-light);\n    line-height: 1.6;\n  }\n  \n  .ritual__tips {\n    background: var(--color-white);\n    border-radius: var(--radius-lg);\n    padding: var(--space-lg);\n    box-shadow: var(--shadow-sm);\n  }\n  \n  .ritual__tips-title {\n    font-family: var(--font-display);\n    font-size: 1.25rem;\n    text-align: center;\n    margin-bottom: var(--space-md);\n  }\n  \n  .ritual__tips-grid {\n    display: grid;\n    grid-template-columns: repeat(3, 1fr);\n    gap: var(--space-md);\n  }\n  \n  .ritual__tip {\n    display: flex;\n    align-items: center;\n    gap: var(--space-sm);\n    padding: var(--space-sm);\n    background: var(--color-bg-alt);\n    border-radius: var(--radius-md);\n  }\n  \n  .ritual__tip-icon {\n    width: 32px;\n    height: 32px;\n    display: flex;\n    align-items: center;\n    justify-content: center;\n    background: var(--color-primary);\n    color: var(--color-black);\n    border-radius: 50%;\n    font-size: 0.9rem;\n  }\n  \n  .ritual__tip span:last-child {\n    font-size: 0.85rem;\n    color: var(--color-text);\n  }\n  \n  @media (max-width: 968px) {\n    .ritual__steps {\n      grid-template-columns: repeat(2, 1fr);\n    }\n    \n    .ritual__tips-grid {\n      grid-template-columns: 1fr;\n    }\n  }\n  \n  @media (max-width: 480px) {\n    .ritual__steps {\n      grid-template-columns: 1fr;\n    }\n  }\n</style>\n