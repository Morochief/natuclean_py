<style>
  .ritual {
    padding: var(--space-xl) 0;
    background: var(--color-bg);
  }
  
  .ritual__header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto var(--space-xl);
  }
  
  .ritual__label {
    display: inline-block;
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-primary);
    margin-bottom: var(--space-sm);
    padding: 0.5rem 1rem;
    background: rgba(25, 230, 60, 0.1);
    border-radius: var(--radius-full);
  }
  
  .ritual__title {
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: var(--space-sm);
    line-height: 1.2;
  }
  
  .ritual__description {
    font-size: 1.1rem;
    color: var(--color-text-light);
  }
  
  .ritual__steps {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-md);
    margin-bottom: var(--space-xl);
    position: relative;
  }
  
  /* Connector line */
  .ritual__steps::before {
    content: '';
    position: absolute;
    top: 40px;
    left: 15%;
n    right: 15%;
    height: 2px;
    background: linear-gradient(90deg, var(--color-primary) 0%, transparent 100%);
    z-index: 0;
  }
  
  .ritual__step {
    position: relative;
    text-align: center;
    padding: var(--space-lg) var(--space-sm) var(--space-md);
    z-index: 1;
  }
  
  .ritual__step-outer {
    width: 80px;
    height: 80px;
    margin: 0 auto var(--space-md);
    background: var(--color-white);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-md);
    transition: all var(--transition-base);
  }
  
  .ritual__step-inner {
    width: 70px;
    height: 70px;
    background: rgba(25, 230, 60, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all var(--transition-base);
  }
  
  .ritual__step:hover .ritual__step-outer {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
  }
  
  .ritual__step:hover .ritual__step-inner {
    background: var(--color-primary);
  }
  
  .ritual__step-icon {
    font-size: 2rem;
    transition: transform var(--transition-base);
  }
  
  .ritual__step:hover .ritual__step-icon {
    transform: scale(1.1);
  }
  
  .ritual__step-number {
    display: block;
    font-family: var(--font-display);
    font-size: 0.85rem;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: var(--space-sm);
    letter-spacing: 0.1em;
  }
  
  .ritual__step-title {
    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: var(--space-xs);
    color: var(--color-text);
  }
  
  .ritual__step-description {
    font-size: 0.85rem;
    color: var(--color-text-light);
    line-height: 1.6;
  }
  
  .ritual__tips {
    background: var(--color-bg-alt);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
    max-width: 800px;
    margin: 0 auto;
  }
  
  .ritual__tips-title {
    font-family: var(--font-display);
    font-size: 1.25rem;
    text-align: center;
    margin-bottom: var(--space-md);
    color: var(--color-text);
  }
  
  .ritual__tips-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-md);
  }
  
  .ritual__tip {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-md);
    background: var(--color-white);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-base);
  }
  
  .ritual__tip:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
  }
  
  .ritual__tip-icon {
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-primary);
    border-radius: 50%;
    font-size: 0.8rem;
  }
  
  .ritual__tip span:last-child {
    font-size: 0.85rem;
    color: var(--color-text);
    font-weight: 500;
  }
  
  @media (max-width: 968px) {
    .ritual__steps {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .ritual__steps::before {
      display: none;
    }
    
    .ritual__tips-grid {
      grid-template-columns: 1fr;
    }
  }
  
  @media (max-width: 480px) {
    .ritual__steps {
      grid-template-columns: 1fr;
    }
    
    .ritual__step-outer {
      width: 64px;
      height: 64px;
    }
    
    .ritual__step-inner {
      width: 54px;
      height: 54px;
    }
    
    .ritual__step-icon {
      font-size: 1.5rem;
    }
  }
</style>
