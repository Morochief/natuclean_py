---
// AlertBadge.astro - Notification Counter

interface Props {
  count: number;
}

const { count } = Astro.props;
const hasAlerts = count > 0;
---

<div class={`alert-badge ${hasAlerts ? 'alert-badge--active' : ''}`}>
  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
    <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/>
    <path d="M13.73 21a2 2 0 0 1-3.46 0"/>
  </svg>
  {hasAlerts && <span class="alert-badge__count">{count}</span>}
</div>

<style>
  .alert-badge {
    position: relative;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10px;
    background: var(--dashboard-bg);
    color: var(--dashboard-muted);
    cursor: pointer;
    transition: all 0.2s ease;
  }
  
  .alert-badge:hover {
    background: var(--dashboard-border);
    color: var(--dashboard-text);
  }
  
  .alert-badge svg {
    width: 20px;
    height: 20px;
  }
  
  .alert-badge--active {
    color: var(--dashboard-warning);
  }
  
  .alert-badge__count {
    position: absolute;
    top: 4px;
    right: 4px;
    width: 16px;
    height: 16px;
    background: var(--dashboard-danger);
    color: white;
    font-size: 0.65rem;
    font-weight: 700;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>
