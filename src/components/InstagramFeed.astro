      <!-- Instagram Post 4 -->
      <a href="https://instagram.com/natuclean" target="_blank" rel="noopener" class="instagram__post">
        <img src="/images/candle-detail.jpg" alt="Detalle de producto" loading="lazy" />
        <div class="instagram__overlay">
          <svg class="instagram__icon" width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
