<style>
  .ingredients {
    padding: var(--space-xl) 0;
    background: var(--color-bg-alt);
  }
  
  .ingredients__header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto var(--space-xl);
  }
  
  .ingredients__label {
    display: inline-block;
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-primary);
    margin-bottom: var(--space-sm);
    padding: 0.5rem 1rem;
    background: rgba(25, 230, 60, 0.1);
    border-radius: var(--radius-full);
  }
  
  .ingredients__title {
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: var(--space-sm);
  }
  
  .ingredients__description {
    font-size: 1.1rem;
    color: var(--color-text-light);
  }
  
  .ingredients__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-md);
    margin-bottom: var(--space-xl);
  }
  
  .ingredient-card {
    background: var(--color-white);
    padding: var(--space-lg);
    border-radius: var(--radius-lg);
    text-align: center;
    transition: all var(--transition-base);
    box-shadow: var(--shadow-sm);
  }
  
  .ingredient-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
  }
  
  .ingredient-card__icon {
    width: 64px;
    height: 64px;
    margin: 0 auto var(--space-md);
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(25, 230, 60, 0.08);
    border-radius: 50%;
    transition: all var(--transition-base);
    color: var(--color-primary);
  }
  
  .ingredient-card:hover .ingredient-card__icon {
    background: var(--color-primary);
    color: var(--color-white);
    transform: scale(1.1);
  }
  
  .ingredient-card__icon svg {
    width: 32px !important;
    height: 32px !important;
  }
  
  .ingredient-card__name {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: var(--space-xs);
  }
  
  .ingredient-card__category {
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-accent);
    margin-bottom: var(--space-sm);
  }
  
  .ingredient-card__description {
    font-size: 0.9rem;
    color: var(--color-text-light);
    line-height: 1.6;
    margin-bottom: var(--space-md);
  }
  
  .ingredient-card__benefits {
    display: flex;
    justify-content: center;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }
  
  .ingredient-card__benefit {
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-primary);
    padding: 0.25rem 0.5rem;
    background: rgba(25, 230, 60, 0.1);
    border-radius: var(--radius-sm);
  }
  
  .ingredients__commitment {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-lg);
    background: var(--color-white);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
  }
  
  .ingredients__commitment-icon {
    font-size: 3rem;
    flex-shrink: 0;
  }
  
  .ingredients__commitment-text strong {
    display: block;
    font-family: var(--font-display);
    font-size: 1.25rem;
    margin-bottom: var(--space-xs);
  }
  
  .ingredients__commitment-text p {
    color: var(--color-text-light);
    margin: 0;
  }
  
  @media (max-width: 968px) {
    .ingredients__grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .ingredients__commitment {
      flex-direction: column;
      text-align: center;
    }
  }
  
  @media (max-width: 480px) {
    .ingredients__grid {
      grid-template-columns: 1fr;
    }
  }
</style>
